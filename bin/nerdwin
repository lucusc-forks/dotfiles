#!/usr/bin/env bash
# Minimalized nerdwin: provide an icon for a given window name.

NAME=$1

get_icon() {
  case $NAME in
  htop | top)
    echo ""
    ;;
  fish | zsh | bash | tcsh)
    echo ""
    ;;
  vi | vim | nvim | lvim)
    echo ""
    ;;
  lazygit | git | tig)
    echo ""
    ;;
  node)
    echo "󰎙"
    ;;
  ruby)
    echo ""
    ;;
  go)
    echo ""
    ;;
  lf | lfcd)
    echo ""
    ;;
  beam | beam.smp) # Erlang runtime
    echo ""
    ;;
  rustc | rustup)
    echo ""
    ;;
  Python)
    echo ""
    ;;
  *)
    echo "$NAME"
    ;;
  esac
}

ICON=$(get_icon)
echo "$ICON"
